<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
       <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
             <solid android:color="@color/pureWhite"></solid>
             <stroke android:color="@color/pureBlack" android:width="2dp"></stroke>
           <corners android:radius="5dp"></corners>
       </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/pureBlack"></solid>
            <stroke android:color="@color/myPeach" android:width="2dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

</selector>